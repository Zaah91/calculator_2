<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/result_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:textAlignment="textEnd" />

    <TableRow>
        <Button
            android:id="@+id/some_number"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="1"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number2"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="2"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number3"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="3"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number4"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="+"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/some_number5"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="4"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number6"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="5"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number7"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="6"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number8"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="-"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/some_number9"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="7"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number10"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="8"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number11"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="9"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number12"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="x"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/some_number13"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="0"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number14"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="."
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number15"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="="
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/some_number16"
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:text="/"/>
    </TableRow>


  </TableLayout>